<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BCD4">

        <ImageView
            android:id="@+id/img_authorAvatar"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_author"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/img_authorAvatar"
            app:layout_constraintTop_toTopOf="@id/img_authorAvatar"/>

        <TextView
            android:id="@+id/txt_bookNumber"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="@id/tv_author"
            app:layout_constraintTop_toBottomOf="@id/tv_author"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Số Sách: "
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_bookNumber"
            app:layout_constraintStart_toEndOf="@id/txt_bookNumber"
            app:layout_constraintTop_toTopOf="@id/txt_bookNumber"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_authorId"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Mã Tác Giả: "
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_bookNumber"
            app:layout_constraintTop_toBottomOf="@id/txt_bookNumber"/>

        <TextView
            android:id="@+id/tv_authorId"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/txt_authorId"
            app:layout_constraintTop_toTopOf="@id/txt_authorId"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>